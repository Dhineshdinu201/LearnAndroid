<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >
    <item android:state_pressed="true" >
        <shape android:shape="rectangle"  >
            <corners android:radius="3dip" />
            <stroke android:width="1dip" android:color="#EB6D63" />
            <gradient android:angle="-90" android:startColor="#FA746A" android:endColor="#F56D63"  />
        </shape>
    </item>
    <item android:state_focused="true">
        <shape android:shape="rectangle"  >
            <corners android:radius="3dip" />
            <stroke android:width="1dip" android:color="#F11C0B" />
            <solid android:color="#F44336"/>
        </shape>
    </item>
    <item >
        <shape android:shape="rectangle"  >
            <corners android:radius="3dip" />
            <stroke android:width="1dip" android:color="#F44336" />
            <gradient android:angle="-90" android:startColor="#F44336" android:endColor="#F44336" />
        </shape>
    </item>
</selector>